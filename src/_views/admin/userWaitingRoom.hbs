<main class="bg-white">
    <form method="POST" action="/admin">
        <div class="
            bg-white
            flex
            flex-col
            items-left
            border
            border-gray-200
            rounded
            shadow
        ">
            <p class="
                text-xl
                font-semibold
                tracking-tight
                bg-white
                rounded
                p-4
            ">
                Select Requests to Authorize
            </p>

            {{#if this.userRequests}}
            <ul class="
                flex
                flex-col
                justify-around
                [&>*:nth-child(even)]:bg-neutral-50
                [&>*:nth-child(odd)]:bg-neutral-100
            ">
                {{#each this.userRequests}}
                    <li class="flex flex-row">
                        <input
                                type="checkbox"
                                id="{{{this.id}}}"
                                name="{{{this.id}}}"
                                value="1"
                                class="hidden peer"
                        >
                        <label for="{{{this.id}}}"
                               class="
                           w-full
                           rounded
                           p-2
                           border
                           border-gray-200
                           rounded
                           peer-checked:border-2
                           peer-checked:border-blue-600
                           peer-checked:text-gray-600
                    ">

                            <p class="
                        text-base
                        tracking-tight
                    ">
                                Username:&emsp;<span class="font-semibold">{{this.userUsername}}</span>
                            </p>

                            <p class="
                        text-base
                        tracking-tight
                    ">
                                Wash Day:&emsp;<span class="font-semibold">{{this.created_at}}</span>
                            </p>

                            <p class="
                        text-base
                        tracking-tight
                    ">
                                Expires at:&emsp;<span class="font-semibold">{{humanTimeFromUnix
                                    this.expires_at}}</span>
                            </p>

                        </label>
                    </li>
                {{/each}}
            {{else}}
                <div class="
               w-full
               rounded
               bg-neutral-100
               p-2
               border
               border-gray-200
               rounded
            ">
                    <p class="
                font-semibold
                text-xl
                ">
                        No pending requests
                    </p>
                </div>
            {{/if}}
        </ul>
        </div>

        <button type="submit" class="
                        w-full
                        my-4
                        mx-1
                        text-white
                        font-extrabold
                        py-4
                        bg-green-600
                        border
                        border-4
                        border-white
                        focus:ring-2
                        rounded-lg
                        hover:bg-white
                        hover:text-green-600
                        hover:border-green-600
                        ">
            Authorize Requests
        </button>
    </form>
</main>
