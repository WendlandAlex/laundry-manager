{{> bags/bagStatusesChart}}
<div>
    <div class="
        bg-white
        flex
        flex-row
        flex-wrap
        justify-left
        items-baseline
        p-2
        border
        border-gray-200
        rounded
        shadow
    ">
        <!--        Name-->
        <div>
            <a href="/washdays/{{createdAt}}/person/{{personName}}/modify"
               id="changePersonName"
               class="
                text-xl
                font-semibold
                tracking-tight
                rounded
                px-2
            ">
                {{personName}}
            </a>
        </div>

        <!--        is bagsComplete == bagsAccepted?-->
        <p class="
        text-xl
        font-semibold
        tracking-tight
        bg-white
        rounded
        {{#if (arrayIncludes data.peopleComplete personName)}}
        text-green-500
        ">
            Complete ✅
        {{else}}
            text-yellow-500
            ">
            Incomplete ⚠️
        {{/if}}
        </p>
    </div>
    {{#each data.people}}
        {{#if (stringEquals @key ../personName)}}
            <div class="flex-row flex-wrap">

                {{#if this.notes}}
                    {{> washDayPersonNotes}}
                {{/if}}

                <div class="
                    bg-white
                    flex
                    flex-col
                    justify-left
                    items-baseline
                    p-2
                    border
                    border-gray-200
                    rounded
                    shadow
                ">
                    {{> bags/bags this.bags}}
                    {{> bags/nextBag}}
                </div>

            </div>

            <div class="
                flex
                flex-row
                flex-wrap
                rounded
                border
                shadow
                border-gray-200
            ">

                <a href="/washdays/{{../createdAt}}/person/{{../personName}}/modify"
                   class="
                    text-white
                    font-semibold
                    mx-2
                    my-2
                    p-4
                    bg-green-600
                    border
                    border-2
                    border-white
                    rounded
                    hover:bg-white
                    hover:text-green-600
                    hover:border-green-600
                ">
                    Change Name
                </a>

                <a href="/washdays/{{../createdAt}}/personOriented"
                   class="
                    text-white
                    text-base
                    font-semibold
                    mx-2
                    my-2
                    p-4
                    bg-blue-600
                    border
                    border-2
                    border-white
                    rounded
                    hover:bg-white
                    hover:text-blue-600
                    hover:border-blue-600

                ">
                    Return to People
                </a>

            </div>

            <div class="rounded border shadow border-gray-200">
                <p class="
                            text-xl
                            font-semibold
                            tracking-tight
                            bg-white
                            rounded
                            p-2
                        ">
                    Event Log
                </p>
            </div>
            {{#if this.events}}
                {{#each this.events}}
                    <div class="rounded border shadow border-gray-200">
                        {{> people/washDayEventListCard this}}
                    </div>
                {{/each}}
            {{/if}}
        {{/if}}
    {{/each}}
</div>
