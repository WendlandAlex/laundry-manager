<main class="bg-white">
    <div class="
        bg-white
        flex
        flex-col
        items-left
        pl-2
        py-2
        border
        border-gray-200
        rounded
        shadow
    ">
        <p class="
        text-xl
        font-semibold
        tracking-tight
        bg-white
        rounded
        px-2
        my-2"
        >
            Submit an Event for
            {{#if column }}
                Dryer {{column}} {{row}}&emsp;âœ¨ðŸ«§
            {{else}}
                a Dryer&emsp;âœ¨ðŸ«§
            {{/if}}
        </p>
    </div>

    <form method="POST" action="{{eventFormSubmitUrl}}">
        <div class="
            bg-white
            flex
            flex-col
            items-left
            border
            border-gray-200
            rounded
            shadow
        ">
            <div class="block mx-2 px-2 py-2 rounded">
                <label class="w-full my-2 ml-2 text-sm font-medium text-gray-900 "
                       for="row">
                    Column
                </label>
            </div>

            <div class="block mx-2 px-3 h-12 mb-2 rounded">
                {{!-- prefill with ?column="" --}}
                <input class="block w-full p-4 text-blue-600 bg-gray-100 border-gray-300 rounded"
                       id="column"
                       type="textarea"
                       rows="8"
                       name="column"
                       value="{{{column}}}"
                    {{#if column}}
                       placeholder="{{{column}}}"
                    {{else}}
                       placeholder="Enter a number between 1 and 32"
                    {{/if}}
                >
                </input>
            </div>

            <div class="block mx-2 px-2 py-2 rounded">
                <label class="w-full my-2 ml-2 text-sm font-medium text-gray-900 "
                       for="row">
                    Row
                </label>
            </div>

            <div class="block mx-2 px-3 h-12 rounded">
                <select class="w-1/4 px-2 h-8 text-sm font-medium text-gray-900"
                        id="row"
                        name="row"
                        rows=""
                >
                    {{!-- prefill with ?row="" --}}
                    {{#if row}}
                        <option value="{{{row}}}" selected>{{row}}</option>
                    {{/if}}
                    <option value="1">Top</option>
                    <option value="0">Bottom</option>
                </select>
            </div>

            {{#each formSchema.textFields}}
                <div class="block mx-2 px-2 py-2 rounded">
                    <label class="w-full my-2 ml-2 text-sm font-medium text-gray-900 "
                           for="{{{this}}}">
                        {{{splitOnDelimiter (toTitleCase this) "_" null}}}
                    </label>
                    <input class="block w-full p-4 text-blue-600 bg-gray-100 border-gray-300 rounded"
                           id="{{{this}}}"
                           type="textarea"
                           rows="8"
                           name="{{{this}}}"
                           placeholder="{{{splitOnDelimiter this "_" null}}} (optional)"
                    >
                    </input>
                </div>
            {{/each}}

            {{#each formSchema.checkboxFields}}
                <div class="block mx-2 px-2 py-2 rounded">
                    <label class="w-full my-2 ml-2 text-sm font-medium text-gray-900 "
                           for="{{{toLowerCase this}}}">
                        {{{toTitleCase this}}}?
                    </label>
                </div>
                <div class="block mx-2 px-2 py-2 rounded">
                    <input class="mx-4 w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2"
                           id="{{{toLowerCase this}}}"
                           type="checkbox"
                           value="{{{toLowerCase this}}}"
                           name="{{{toLowerCase this}}}">
                </div>
            {{/each}}
        </div>

        <div class="
            bg-white
            flex
            flex-col
            items-left
            py-2
            border
            border-gray-200
            rounded
            shadow
        ">
            <div class="block m-2 px-2 pb-2 rounded">
                <button class="
                    text-white
                    font-extrabold
                    py-2
                    px-4
                    bg-orange-400
                    border
                    border-4
                    border-white
                    focus:ring-2
                    rounded
                    hover:bg-white
                    hover:text-orange-400
                    hover:border-orange-400
                    ">
                    Submit&emsp;ðŸª„ðŸ“‹
                </button>
            </div>
        </div>
        </div>
    </form>
</main>
